{
  "name": "electron-rasterizer-sharp",
  "version": "1.0.0",
  "description": "Rasterize the first page of a PDF using Electron, Sharp, and PDF.js",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "Electron",
    "Sharp",
    "PDF",
    "Rasterize"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.example.electronrasterizersharp",
    "productName": "PDFRasterizer",
    "files": [
      "main.js",
      "index.html",
      "renderer.js",
      "node_modules/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "**/node_modules/sharp/**/*",
      "**/node_modules/@hyzyla/pdfium/dist/pdfium.wasm"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.graphics-design"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Graphics",
      "maintainer": "Your Name <your.email@example.com>"
    },
    "npmRebuild": true
  },
  "dependencies": {
    "@hyzyla/pdfium": "^2.1.5",
    "sharp": "^0.34.1"
  }
}
