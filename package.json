{
  "name": "pdf-merger-app",
  "version": "1.0.0",
  "description": "An Electron app to merge student PDFs with a cover sheet",
  "main": "src/js/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint .",
    "pdf-process": "node src/js/pdf-cmdline-processor.js"
  },
  "dependencies": {
    "@hyzyla/pdfium": "^2.1.5",
    "electron": "^35.1.5",
    "heic-decode": "^2.0.0",
    "pdf-lib": "^1.17.1",
    "sharp": "^0.34.1"
  },
  "devDependencies": {
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.50.0"
  },
  "build": {
    "appId": "com.psi.pdfmerger",
    "productName": "PSI PDF Merger Tool",
    "asarUnpack": [
      "**/node_modules/sharp/**/*",
      "**/node_modules/@hyzyla/pdfium/dist/pdfium.wasm"
    ],
    "mac": {
      "category": "public.app-category.education"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "directories": {
      "output": "dist"
    }
  }
}
