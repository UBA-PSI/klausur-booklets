{
  "name": "pdf-merger-app",
  "version": "1.0.0",
  "description": "An Electron app to merge student PDFs with a cover sheet",
  "main": "src/js/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint .",
    "pdf-process": "node src/js/pdf-cmdline-processor.js"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@hyzyla/pdfium": "^2.1.5",
    "adm-zip": "^0.5.16",
    "csv-parse": "^5.5.6",
    "fast-xml-parser": "^4.4.0",
    "flatpickr": "^4.6.13",
    "heic-decode": "^2.0.0",
    "jszip": "^3.10.1",
    "marked": "^12.0.0",
    "pdf-lib": "^1.17.1",
    "sharp": "^0.34.1",
    "tar": "^7.2.0"
  },
  "devDependencies": {
    "dir-compare": "^5.0.0",
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.50.0"
  },
  "build": {
    "appId": "com.psi.pdfmerger",
    "productName": "PSI PDF Merger Tool",
    "asarUnpack": [
      "**/node_modules/sharp/**/*",
      "**/node_modules/@hyzyla/pdfium/dist/pdfium.wasm"
    ],
    "mac": {
      "category": "public.app-category.education"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": null
    },
    "linux": {
      "target": "AppImage"
    },
    "directories": {
      "output": "dist"
    }
  }
}
